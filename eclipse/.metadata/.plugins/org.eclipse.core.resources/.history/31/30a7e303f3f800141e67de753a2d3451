package com.camp.entity;

import net.minecraft.entity.Entity;
import net.minecraft.entity.EntityLivingBase;
import net.minecraft.entity.IProjectile;
import net.minecraft.entity.effect.EntityLightningBolt;
import net.minecraft.entity.projectile.EntityArrow;
import net.minecraft.init.Blocks;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

public class FireArrow extends EntityArrow implements IProjectile {
	 
    public FireArrow(World par1World, EntityLivingBase par2EntityLivingBase, float par3) {
        super(par1World, par2EntityLivingBase, par3);
        this.setFire(10);
    }
 
    @Override
    public void onUpdate() {
        super.onUpdate();
        if(this.isBurning()) {
            this.worldObj.setBlock((int) this.posX, (int) this.posY, (int) this.posZ, Blocks.fire);
           
        }
    }
    public boolean hitEntity(ItemStack stack, EntityLivingBase target, EntityLivingBase owner) {
	    Entity bolt = new EntityLightningBolt(owner.worldObj, target.posX, target.posY, target.posZ);
	    owner.worldObj.addWeatherEffect(bolt);
	    return true;
	}
}